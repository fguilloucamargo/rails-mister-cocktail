
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
  url( <%= cl_image_path("plsugnviwtpga0cn87jd.jpg", :opacity=>50, :quality=>49, :y=>652, :zoom=>1.6) %> );">
  <div class="container">
    <h1>Mister Cocktail</h1>
  </div>
</div>


<div class="container">

  <div class="row mt-3">
    <% @cocktails.each do |cocktail| %>
      <div class="col-3">
        <div class="card">
          <img src="<%= cl_image_path(cocktail.photo.key, :height=>300, :width=>300, :crop=>"fill") %>" />
        </div>
        <div class="card-cocktails-infos">
          <h2>
            <%= link_to "#{cocktail.name}", cocktail_path(cocktail), class: "text-muted m-2" %>
          </h2>
        </div>
      </div>
    <% end %>
  </div>

</div>
