<div class="container">
  <h1>Cocktails</h1>
  <% @cocktails.each do |cocktail| %>
    <div class="row">
      <div class="col-3 offset-3 m-2">
        <div class="card">
          <%= link_to "#{cocktail.name}", cocktail_path(cocktail) %>
        </div>
      </div>
    </div>
  <% end %>
</div>


