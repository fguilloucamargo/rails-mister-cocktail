
<div class="container">
  <h1><%= @cocktail.name.capitalize %></h1>

  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <%= link_to "Delete ingredient", dose_path(dose) ,method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
  <div>
    <%= link_to "Add an ingredient and its dose", new_cocktail_dose_path(@cocktail) %>
  </div>


</div>


